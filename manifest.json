{
    "manifest_version": 3,

    "name": "Window Title (Beta)",
    "description": "Enable assigning titles to Chrome windows.",
    "version": "0.3",

    "browser_action": { "default_popup": "main.html#popuppage" },
    "background": { "service_worker": "main.js" },

    "icons": {
        "64": "icon.png"
    },


    // TODO: FIND WAY TO CHANGE TAB TITLES
    //       THAT DOESN'T REQUIRE FULL ACCESS TO ALL SITES.
    "permissions": [
        "tabs", "storage", "activeTab", "scripting"
    ],

    "host_permissions": [
        "*://*/"
    ]
    
}
